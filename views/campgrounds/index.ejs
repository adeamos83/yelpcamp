<%  include ../partials/header %>
    <div class="mt-2 d-flex justify-content-end">
       <a href="/campgrounds/new" class="btn btn-camp">Add New Campgrounds</a>
    </div>
    <header class="jumbotron">
        <div class="text-center">
            <h1>Welcome To YelpCamp!</h1>
            <p>View are hand-picked campgrounds from all over the world</p>
        </div>
        
    </header>
    
    
    <div class="row">
        <div class="col-lg-12 mobile-center">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
    </div>
    
    <div class="row d-flex flex-wrap">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-4 col-md-6 col-12 d-flex justify-content-center">
                <div class="card-deck camp-card-deck">
                    <div class="card box-shadow">
                      <a href="/campgrounds/<%=campground._id%>"><img class="card-img-top camp-card-img" src=" <%= campground.image %> " alt="Card image cap"></a>
                      <div class="card-body">
                        <h5 class="card-title"><%= campground.name %></h5>
                        <!--<h6 class="card-subtitle mb-2 text-muted"><%= campground.location %></h6>-->
                        <!--Uncomment to add price feature-->
                        <!--<h6 class="card-subtitle my-2">$<%= campground.price %>.00/night</h6>-->
                        <p class="card-text"><%= campground.description.substr(0,50) %>...</p>
                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-camp">More Info</a>
                      </div>
                    </div>
                </div>
            </div>

        <% }); %>
    </div>


<%  include ../partials/footer %>