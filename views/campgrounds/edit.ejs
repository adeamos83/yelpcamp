<% include ../partials/header %>

 <div style="width: 50%; margin: 25px auto;">
           <div class="card mb-3">
               <div class="card-header">
                   <h1 class="text-center"><span><i class="fa fa-pencil-square-o" aria-hidden="true"></i></span> Edit: <%=campground.name%></h1>
               </div>
              <div class="card-body">
                <form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="POST">
                   <div class="form-row">
                       <div class="form-group col-md-6">
                           <label>Campground Name</label>
                           <input class="form-control" type="text" name="campground[name]" value="<%= campground.name%>">
                       </div>
                       <div class="form-group col-md-6">
                            <label for="location">Location</label>
                            <input class="form-control" type="text" name="campground[location]" value="<%= campground.location %>" id="location">
                        </div>
                   </div>
                   <div class="form-row">
                    <!--Uncomment to add price feature-->
                       <!--<div class="form-group col-md-6">-->
                       <!--    <label>Price</label>-->
                       <!--     <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">-->
                       <!--</div>-->
                        <div class="form-group col-md-12">
                            <label>Image Url</label>
                            <input class="form-control" type="text" name="campground[image]" value="<%= campground.image%>">
                        </div>
                   </div>
                   <div class="form-row">
                       <div class="form-group col-md-12">
                           <label>Description</label>
                            <textarea class="form-control" type="text" name="campground[description]"><%= campground.description%></textarea>
                        </div>
                   </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <button class="btn btn-camp btn-lg btn-block">Sumbit!</button>
                        </div>
                    </div>
                </form>
                <a href="/campgrounds/<%= campground._id %>" class="text-muted"><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back</a>
              </div>
            </div>
</div>
<% include ../partials/footer %>