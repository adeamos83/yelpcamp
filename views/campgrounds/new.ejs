<% include ../partials/header %>

       <div style="width: 50%; margin: 25px auto;">
           <div class="card mb-3">
               <div class="card-header">
                   <h1 class="text-center">Create a New Campground</h1>
               </div>
              <div class="card-body">
                <form action="/campgrounds" method="POST">
                   <div class="form-row">
                       <div class="form-group col-md-6">
                           <label>Campground Name</label>
                            <input class="form-control" type="text" placeholder="name" name="name">
                       </div>
                       <div class="form-group col-md-6">
                            <label for="location">Location</label>
                            <input class="form-control" type="text" placeholder="Yosemite National Park, CA" name="location" id="location">
                        </div>
                   </div>
                   <div class="form-row">
                       <!--Uncomment to add price feature-->
                       <!--<div class="form-group col-md-6">-->
                       <!--    <label>Price</label>-->
                       <!--     <input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01">-->
                       <!--</div>-->
                        <div class="form-group col-md-12">
                            <label>Image Url</label>
                            <input class="form-control" type="text" placeholder="image url" name="image">
                        </div>
                   </div>
                   <div class="form-row">
                       <div class="form-group col-md-12">
                           <label>Description</label>
                            <textarea class="form-control" row="4" type="text" placeholder="description" name="description"></textarea>
                        </div>
                   </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <button class="btn btn-camp btn-lg btn-block">Sumbit!</button>
                        </div>
                    </div>
                </form>
                <a href="/campgrounds" class="text-muted"><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back</a>
              </div>
            </div>
        </div>
  
<% include ../partials/footer %>

